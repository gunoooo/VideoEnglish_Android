<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AccentColorWhite">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_text_input_box</item>
    </style>

    <style name="AppTheme.TextInputStyle" >
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>
